<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
        
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toDayWorkStartTime"
                android:text="startTime"
                android:gravity="center"
                android:layout_weight="1"/>
    
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toDayWorkFinishTime"
                android:text="finishTime"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_weight="1"/>
    
    </LinearLayout>
    
    <TextView
            android:id="@+id/toDayWorkContent"
            android:layout_margin="4dp"
            android:padding="8dp"
            android:text="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
    <LinearLayout
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        
        <TextView
                android:id="@+id/toDayUseMoneyCategory"
                android:padding="8dp"
                android:text="MoneyCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        
        <TextView
                android:id="@+id/toDayUseMoney"
                android:padding="8dp"
                android:text="Money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    
        <TextView
                android:id="@+id/toDayUseMoneyMemo"
                android:padding="8dp"
                android:text="MoneyMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        
    </LinearLayout>
    

</LinearLayout>