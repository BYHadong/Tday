<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TDayWriteActivity">
    
    <LinearLayout
            android:id="@+id/tDayLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        
        <TextView
                android:id="@+id/toDayDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="날짜"
                android:gravity="center"
                android:textSize="20dp"/>
        
        
        <EditText
                android:id="@+id/toDayWillDoWorkComment_WriteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="할일"/>
        
        <EditText
                android:id="@+id/toDayWillDoWorkStudy_WriteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="할공부"/>
        
        <EditText
                android:id="@+id/toDayWorkStartTime_WriteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="시작 시간"/>
        
        <EditText
                android:id="@+id/toDayWorkFinishTime_WriteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="끝난 시간"/>
        
        <EditText
                android:id="@+id/toDayWillDoWork_WriteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="할일"/>
        
        <Spinner
                android:id="@+id/toDayUseMoneyCategory_WriteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/toDayUseMoneyCategoryList"
                />
        
        <EditText
                android:id="@+id/toDayUseMoney_WriteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="돈쓴양"/>
        
        <EditText
                android:id="@+id/toDayUseMoneyMemo_WriteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="자세한 메모"/>
    
    </LinearLayout>
    
    <Button
            android:id="@+id/toDayOkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="완료"
            app:layout_constraintBottom_toBottomOf="@+id/tDayLayout"
            app:layout_constraintEnd_toEndOf="@+id/tDayLayout"/>


</androidx.constraintlayout.widget.ConstraintLayout>